<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_us_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim8"
        android:background="@drawable/ed_border"
        android:gravity="center"
        android:padding="@dimen/dim12"
        android:text="CONTACT US"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim8"
                android:layout_marginRight="@dimen/dim8"
                android:layout_marginTop="@dimen/dim8"
                android:background="@drawable/ed_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_us_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim14"
                    android:paddingTop="@dimen/dim4"
                    android:text="Full Name"
                    android:textSize="@dimen/fontsize11"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/contact_us_edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim8"
                    android:background="@null"
                    android:inputType="text"
                    android:padding="@dimen/dim6"
                    android:text=""
                    android:textAllCaps="true"
                    android:textSize="@dimen/fontsize16"
                    android:typeface="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim8"
                android:layout_marginRight="@dimen/dim8"
                android:layout_marginTop="@dimen/dim8"
                android:background="@drawable/ed_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_us_tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim14"
                    android:paddingTop="@dimen/dim4"
                    android:text="Email"
                    android:textSize="@dimen/fontsize11"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/contact_us_edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim8"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/dim6"
                    android:text=""
                    android:textAllCaps="true"
                    android:textSize="@dimen/fontsize16"
                    android:typeface="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim8"
                android:layout_marginRight="@dimen/dim8"
                android:layout_marginTop="@dimen/dim8"
                android:background="@drawable/ed_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_us_tvPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim14"
                    android:paddingTop="@dimen/dim4"
                    android:text="Phone Number"
                    android:textSize="@dimen/fontsize11"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/contact_us_edPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim8"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/dim6"
                    android:text=""
                    android:textAllCaps="true"
                    android:textSize="@dimen/fontsize16"
                    android:typeface="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim8"
                android:layout_marginRight="@dimen/dim8"
                android:layout_marginTop="@dimen/dim8"
                android:background="@drawable/ed_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_us_tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim14"
                    android:paddingTop="@dimen/dim4"
                    android:text="Message"
                    android:textSize="@dimen/fontsize11"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/contact_us_edMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim4"
                    android:background="@null"
                    android:gravity="top|left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="@dimen/dim6"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="@dimen/fontsize16"
                    android:typeface="monospace" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_placeOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim10"
                android:background="@color/price_text"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
