<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dim8">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/diffrent_size_product_roundImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_two" />

    <TextView
        android:id="@+id/diffrent_size_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim2"
        android:text="Kick Frappe"
        android:textSize="@dimen/fontsize12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/diffrent_size_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim2"
        android:text="\u20A9.8.00"
        android:textColor="@color/price_text"
        android:textSize="@dimen/fontsize12"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diffrent_size_product_ivPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="-1dp"
            android:layout_marginRight="@dimen/dim16"
            android:paddingTop="-1dp"
            android:text="+"
            android:textSize="@dimen/fontsize24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diffrent_size_product_tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dim2"
            android:text="1"
            android:textSize="@dimen/fontsize16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diffrent_size_product_ivMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="-1dp"
            android:layout_marginLeft="@dimen/dim16"
            android:paddingTop="-1dp"
            android:text="-"
            android:textSize="@dimen/fontsize24"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/diffrent_size_product_btnAddCart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim30"
        android:layout_marginBottom="@dimen/dim10"
        android:layout_marginLeft="@dimen/dim8"
        android:layout_marginRight="@dimen/dim8"
        android:background="@color/price_text"
        android:text="장바구니 추가"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvItemNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="5sp"
        android:visibility="gone" />


</LinearLayout>